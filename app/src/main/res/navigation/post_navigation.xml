<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/post_navigastion"
    app:startDestination="@id/postsFragment">

    <fragment
        android:id="@+id/postsFragment"
        android:name="com.example.architecturev2.ui.fragments.PostsFragment"
        android:label="PostsFragment" >
        <action
            android:id="@+id/action_postsFragment_to_addingFragment"
            app:destination="@id/addingFragment" />
    </fragment>
    <fragment
        android:id="@+id/addingFragment"
        android:name="com.example.architecturev2.ui.fragments.AddingFragment"
        android:label="AddingFragment" >
        <action
            android:id="@+id/action_addingFragment_to_postsFragment"
            app:destination="@id/postsFragment" />
    </fragment>
</navigation>